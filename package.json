{
  "name": "foldvscode",
  "displayName": "Fold VSCode",
  "description": "Fold files, folders, functions, and by levels",
  "version": "0.1.1",
  "repository": "https://github.com/leonatkdev/extension-vscode-",
  "publisher": "LeonatKrasniqi",
  "license": "MIT",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "fold",
    "unfold",
    "code folding",
    "collapse",
    "expand",
    "vscode",
    "productivity"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "icon": "resources/vsicon.png",
  "galleryBanner": {
    "color": "#007acc",
    "theme": "dark"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "foldContainer",
          "title": "Fold",
          "icon": "resources/line.svg"
        }
      ]
    },
    "views": {
      "foldContainer": [
        {
          "id": "foldView",
          "name": "Commands and Keybindings"
        }
      ]
    },
    "commands": [
      {
        "command": "FoldVSC.foldFunctions",
        "title": "Fold Functions"
      },
      {
        "command": "FoldVSC.foldFile",
        "title": "Fold File",
        "icon": {
          "light": "resources/light/foldfile.svg",
          "dark": "resources/dark/foldfile.svg"
        }
      },
      {
        "command": "FoldVSC.foldFolder",
        "title": "Fold Folders",
        "icon": {
          "light": "resources/light/folder.svg",
          "dark": "resources/dark/folder.svg"
        }
      },
      {
        "command": "FoldVSC.unfoldFile",
        "title": "Unfold File",
        "icon": {
          "light": "resources/light/unfold.svg",
          "dark": "resources/dark/unfold.svg"
        }
      },
      {
        "command": "FoldVSC.foldAllExceptSelectedFunc",
        "title": "Fold All Except Selected"
      },
      {
        "command": "FoldVSC.unfoldAllExceptSelectedFunc",
        "title": "Unfold All Except Selected"
      },
      {
        "command": "FoldVSC.foldLevel1",
        "title": "Fold Level 1"
      },
      {
        "command": "FoldVSC.foldLevel2",
        "title": "Fold Level 2"
      },
      {
        "command": "FoldVSC.foldLevel3",
        "title": "Fold Level 3"
      },
      {
        "command": "FoldVSC.foldLevel4",
        "title": "Fold Level 4"
      },
      {
        "command": "FoldVSC.foldLevel5",
        "title": "Fold Level 5"
      },
      {
        "command": "FoldVSC.foldLevel5",
        "title": "Fold Level 5"
      },
      {
        "command": "FoldVSC.showCommands",
        "title": "Show Commands"
      }
    ],
    "keybindings": [
      {
        "command": "FoldVSC.foldFunctions",
        "key": "ctrl+k b",
        "when": "editorTextFocus"
      },
      {
        "command": "FoldVSC.foldFile",
        "key": "ctrl+k j",
        "when": "editorTextFocus"
      },
      {
        "command": "FoldVSC.foldFolder",
        "key": "ctrl+k c",
        "when": "editorTextFocus"
      },
      {
        "command": "FoldVSC.unfoldFile",
        "key": "ctrl+k u",
        "when": "editorTextFocus"
      },
      {
        "command": "FoldVSC.foldAllExceptSelectedFunc",
        "key": "ctrl+k ctrl+f",
        "when": "editorTextFocus"
      },
      {
        "command": "FoldVSC.unfoldAllExceptSelectedFunc",
        "key": "ctrl+k ctrl+u",
        "when": "editorTextFocus"
      },
      {
        "command": "FoldVSC.foldLevel1",
        "key": "ctrl+k 1",
        "when": "editorTextFocus"
      },
      {
        "command": "FoldVSC.foldLevel2",
        "key": "ctrl+k 2",
        "when": "editorTextFocus"
      },
      {
        "command": "FoldVSC.foldLevel3",
        "key": "ctrl+k 3",
        "when": "editorTextFocus"
      },
      {
        "command": "FoldVSC.foldLevel4",
        "key": "ctrl+k 4",
        "when": "editorTextFocus"
      },
      {
        "command": "FoldVSC.foldLevel5",
        "key": "ctrl+k 5",
        "when": "editorTextFocus"
      },
      {
        "command": "FoldVSC.showCommands",
        "key": "ctrl+k h",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "FoldVSC.foldFile",
          "when": "editorTextFocus"
        },
        {
          "command": "FoldVSC.foldFolder",
          "when": "editorTextFocus"
        },
        {
          "command": "FoldVSC.unfoldFile",
          "when": "editorTextFocus"
        },
        {
          "command": "FoldVSC.foldAllExceptSelectedFunc",
          "when": "editorHasSelection"
        },
        {
          "command": "FoldVSC.unfoldAllExceptSelectedFunc",
          "when": "editorHasSelection"
        }
      ],
      "editor/title": [
        {
          "command": "FoldVSC.foldFile",
          "group": "navigation",
          "when": "editorLangId == 'javascript'"
        },
        {
          "command": "FoldVSC.unfoldFile",
          "group": "navigation",
          "when": "editorLangId == 'javascript'"
        },
        {
          "command": "FoldVSC.foldFolder",
          "group": "navigation",
          "when": "editorLangId == 'javascript'"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "ts-loader": "^9.5.1",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
